{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% if collector.parameterCount %}
        {% set icon %}
            {{ source('parameter_bag_icon.svg') }}
            <span class="sf-toolbar-value">{{ collector.parameterCount }}</span>
        {% endset %}

        {% set text %}
            <strong>Parameter Bag</strong>
            {% for parameter in collector.parameterItems %}
                <div class="sf-toolbar-info-piece">
                    {% if parameter.label is defined and '' != parameter.label %}
                        <span class="sf-toolbar-file-line"><code>{{ parameter.label }}</code></span>
                    {% endif %}
                </div>
            {% endfor %}
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <span class="label {{ collector.parameterCount == 0 ? 'disabled' }}">
        <span class="icon">{{ source('parameter_bag_icon.svg') }}</span>
        <strong>Parameter Bag</strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>Parameter Bag Contents</h2>
    {% if collector.parameterCount %}
        <table>
            {% for parameter in collector.parameterItems %}
                <tr>
                    <td class="font-normal">{{ parameter.label }}</td>
                    <td class="font-normal">{{ parameter.value }}</td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <div class="empty empty-panel">
            <p>Paramter Bag is empty.</p>
        </div>
    {% endif %}
{% endblock %}
