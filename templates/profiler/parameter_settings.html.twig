{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block head %}
    {{ parent() }}

    <style>
      table.parameter-table td {
        display        : flex;
        flex-direction : column;
        align-items    : flex-start;
        gap            : .5rem;
      }

      td > b {
        font-family      : var(--font-family-monospace, monospace);
        background-color : var(--badge-background);
        border-radius    : 4px;
        box-shadow       : var(--badge-shadow);
        color            : #FAFAFA;
        font-size        : 12px;
        font-weight      : bold;
        padding          : 3px 7px;
        white-space      : nowrap;
      }
    </style>
{% endblock %}

{% block toolbar %}
    {% if collector.parameterCount %}
        {% set icon %}
            {{ source('@Core/profiler/parameters_icon.svg') }}
        {% endset %}

        {% set text %}
            <div class="sf-toolbar-info">
                <div class="sf-toolbar-info-piece">
                    <b>ParameterBag</b>
                    <span>{{ collector.parameterCount }}</span>
                </div>

                <div class="sf-toolbar-info-piece">
                    <b>Settings</b>
                    <span>{{ collector.settingsCount }}</span>
                </div>

                <div class="sf-toolbar-info-piece">
                    <b>User Settings</b>
                    <span>0</span>
                </div>
            </div>
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <span class="label {{ collector.parameterCount == 0 ? 'disabled' }}">
        <span class="icon">{{ source('@Core/profiler/parameters_icon.svg') }}</span>
        <strong>Parameters</strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>Parameters and Settings</h2>

    {% if collector.settingCount %}
        <table id="setting-table" class="parameter-table">
            <thead>
            <tr>
                <th scope="col">Settings</th>
            </tr>
            </thead>
            <tbody>
            {% for setting in collector.settings %}
                <tr>
                    <td>
                        <b>{{ setting.label }}</b>
                        {{ setting.value|raw }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="empty">
            <p>No settings defined.</p>
        </div>
    {% endif %}

    {% if collector.parameterCount %}
        <table id="parameter-bag-table" class="parameter-table">
            <thead>
            <tr>
                <th scope="col">Parameter Bag</th>
            </tr>
            </thead>
            <tbody>
            {% for parameter in collector.parameters %}
                <tr>
                    <td>
                        <b>{{ parameter.label }}</b>
                        {{ parameter.value|raw }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="empty">
            <p>Paramter Bag is empty.</p>
        </div>
    {% endif %}
{% endblock %}
