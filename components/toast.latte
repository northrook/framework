{templateType Core\View\Component\Toast}
<toast n:attr=$attributes class={$status} data-timeout={$timeout}>
    <button class="close" aria-label="Close" type="button"></button>
    <output role="status">
        <i class="status">
            {icon($status, height: '1rem', width: '1rem')}
            <span class="status-type">{$status}</span>
            <time datetime="{$timestamp}">
                {* TODO : Loop over each $instance, set first as 'current' - hide test with CSS *}
                {$when}
            </time>
        </i>
        <span class="message">{$message}</span>
    </output>
    <details n:if="$description">
        <summary>Description</summary>
        {$description}
    </details>
</toast>
